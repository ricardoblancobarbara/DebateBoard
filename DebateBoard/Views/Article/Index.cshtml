@model IEnumerable<DebateBoard.Models.ArticleList>

@{
    ViewBag.Title = "Index";
}

<h2>All the Articles</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<table class="table">

    @foreach (var item in Model)
    {
        <div class="col-md-12 col-sm-12 col-xs-12">
        <hr />

            <div class="col-md-1 col-sm-1 col-xs-1"></div>

            <div class="col-md-3 col-sm-3 col-xs-3">
                <img class="img-responsive" object-fit: cover height: auto src="~/Content/Images/Williams_Farrell.jpg" alt="Williams Farrell">
            </div>

            <div class="col-md-7 col-sm-7 col-xs-7">
                <h6 style="text-align:right">@Html.DisplayFor(modelItem => item.CreatedUtc)</h6>
                <h3 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h3>
                <h6>by @Html.DisplayFor(modelItem => item.AuthorId)</h6>
                <h4 class="card-subtitle">@Html.DisplayFor(modelItem => item.SubTitle)</h4>
                <br />
                <h6>@Html.DisplayFor(modelItem => item.Points)</h6>
                <h6>
                    @Html.ActionLink("Read more", "Details", new { id = item.ArticleId }) |
                    @Html.ActionLink("Edit", "Edit", new { id = item.ArticleId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ArticleId })
                </h6>
            </div>

            <div class="col-md-1 col-sm-1 col-xs-1"></div>

        <hr />
        </div>
    }

</table>


